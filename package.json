{
  "name": "diffhtml",
  "version": "1.0.0-beta",
  "description": "Easily swap out markup with an intelligent virtual dom",
  "main": "dist/diffhtml",
  "author": "Tim Branyen (@tbranyen)",
  "repository": "https://github.com/tbranyen/diffhtml",
  "license": "MIT",
  "scripts": {
    "prepublish": "babel lib --source-maps -d dist/cjs && npm run min",
    "watch": "watchify -t babelify -s diff lib/index.js -o 'derequire > dist/diffhtml.js' -v",
    "build": "npm run build-main && npm run build-runtime",
    "min": "npm run build && npm run build-main-min && npm run build-runtime-min",
    "build-main": "rollup -c rollup.main.config.js",
    "build-runtime": "rollup -c rollup.runtime.config.js",
    "build-main-min": "uglifyjs dist/diffhtml.js -o dist/diffhtml.min.js",
    "build-runtime-min": "uglifyjs dist/diffhtml-runtime.js -o dist/diffhtml-runtime.min.js",
    "jshint": "jshint lib/**/*.js",
    "karma": "karma start",
    "test": "npm run jshint && NODE_ENV=test npm run karma -- --single-run"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-plugin-version-inline": "^1.0.0",
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "coveralls": "^2.11.15",
    "jshint": "^2.9.4",
    "karma": "^1.4.0",
    "karma-browserify": "^5.1.1",
    "karma-browserstack-launcher": "^1.1.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-rollup-plugin": "^0.2.4",
    "mocha": "^3.2.0",
    "phantomjs-prebuilt": "^2.1.14",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-watch": "^3.2.2",
    "sinon": "^1.17.7",
    "uglify-js": "^2.7.5",
    "watchify": "^3.9.0"
  }
}
