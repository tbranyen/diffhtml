{
  "name": "diffhtml",
  "version": "1.0.0-beta",
  "description": "Build JavaScript components and apps using a Virtual DOM",
  "main": "dist/diffhtml",
  "author": "Tim Branyen (@tbranyen)",
  "repository": "https://github.com/tbranyen/diffhtml",
  "license": "MIT",
  "scripts": {
    "prepublish": "babel lib --source-maps -d dist/cjs && npm run min",
    "watch": "NODE_ENV=production watchify -t babelify -s diff lib/index.js -o 'derequire > dist/diffhtml.js' -v",
    "build": "npm run build-main && npm run build-runtime",
    "min": "npm run build && npm run build-main-min && npm run build-runtime-min",
    "build-main": "NODE_ENV=production rollup -c rollup.main.config.js",
    "build-runtime": "NODE_ENV=production rollup -c rollup.runtime.config.js",
    "build-main-min": "uglifyjs dist/diffhtml.js -o dist/diffhtml.min.js",
    "build-runtime-min": "uglifyjs dist/diffhtml-runtime.js -o dist/diffhtml-runtime.min.js",
    "jshint": "jshint lib/**/*.js",
    "test": "npm run jshint && NODE_ENV=test mocha test/_setup test",
    "test-cov": "NODE_ENV=test nyc -r=lcov mocha test/_setup test",
    "test-watch": "NODE_ENV=test nyc -r=lcov mocha test/_setup test -w"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-version-inline": "^1.0.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.22.0",
    "coveralls": "^2.11.16",
    "jsdom": "^9.10.0",
    "jshint": "^2.9.4",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-watch": "^3.2.2",
    "sinon": "^1.17.7",
    "uglify-js": "^2.7.5"
  },
  "nyc": {
    "require": ["babel-register"],
    "sourceMap": false,
    "instrument": false
  }
}
