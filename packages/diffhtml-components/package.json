{
  "name": "diffhtml-components",
  "version": "1.0.0-beta.29",
  "main": "dist/cjs/index",
  "type": "module",
  "module": "dist/es/index",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/plugin-transform-classes": "^7.16.7",
    "@types/mocha": "^9.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-custom-element-classes": "^0.1.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-diffhtml-imports": "^1.0.0-beta.29",
    "c8": "^7.11.0",
    "diffhtml": "^1.0.0-beta.29",
    "extless-loader": "^1.0.0",
    "jsdom": "^19.0.0",
    "mocha": "^9.2.2",
    "rollup": "^2.70.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-hypothetical": "^2.1.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-visualizer": "^5.6.0",
    "rollup-watch": "^4.3.1",
    "typescript": "^4.6.3",
    "uglify-js": "^3.15.3"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist/* && mkdir -p dist",
    "check-js": "tsc -p jsconfig.json",
    "build": "npm run clean && npm run check-js && npm run build-main && npm run build-esm && npm run build-cjs && npm run build-min",
    "build-main": "NODE_ENV=umd rollup -c rollup.main.config.js",
    "build-cjs": "NODE_ENV=cjs babel lib -d dist/cjs && sh ../../post-cjs.sh",
    "build-esm": "NODE_ENV=esm babel lib -d dist/es",
    "build-umd": "NODE_ENV=umd rollup -c rollup.config.js",
    "build-min": "NODE_ENV=min rollup -c rollup.main.config.js && uglifyjs dist/components.min.js -o dist/components.min.js -m -c",
    "watch-main": "NODE_ENV=umd rollup -c rollup.main.config.js -w",
    "test": "mocha",
    "test-watch": "NODE_ENV=test mocha -w test/_setup test/**",
    "test:ci": "npm run test-cov",
    "test-cov": "NODE_ENV=test+cov c8 -r=lcov mocha test/_setup test/**"
  }
}
